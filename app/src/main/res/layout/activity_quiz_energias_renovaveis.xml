<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcc30a"
    tools:context=".Quizzes.QuizEnergiasRenovaveis">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fcc30a"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fcc30a">


            <Button
                android:id="@+id/buttonConfirmarEnergiasRenovaveis"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/buttonamarelo"
                android:text="Confirmar"
                android:textColor="#917001"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupEnergiasRenovaveis" />

            <TextView
                android:id="@+id/textViewPerguntaEnergiasRenovaveis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:text="Pergunta"
                android:textColor="#FFF9E7"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTempoEnergiasRenovaveis" />

            <TextView
                android:id="@+id/textViewPerguntaNrEnergiasRenovaveis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Pergunta: 1/x"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textViewScoreEnergiasRenovaveis"
                app:layout_constraintTop_toBottomOf="@+id/textViewScoreEnergiasRenovaveis" />

            <TextView
                android:id="@+id/textViewTempoEnergiasRenovaveis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="30dp"
                android:text="30"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewScoreEnergiasRenovaveis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="Score: 0"
                android:textColor="#F8F8F8"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/radioGroupEnergiasRenovaveis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPerguntaEnergiasRenovaveis">

                <RadioButton
                    android:id="@+id/radioButtonOpcao1EnergiasRenovaveis"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonamareloclaro"
                    android:text="RadioButton"
                    android:textColor="#403000"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioButtonOpcao2EnergiasRenovaveis"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonamareloclaro"
                    android:text="RadioButton"
                    android:textColor="#403000"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioButtonOpcao3EnergiasRenovaveis"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonamareloclaro"
                    android:text="RadioButton"
                    android:textColor="#403000"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioButtonOpcao4EnergiasRenovaveis"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonamareloclaro"
                    android:text="RadioButton"
                    android:textColor="#403000"
                    android:textStyle="bold" />
            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>