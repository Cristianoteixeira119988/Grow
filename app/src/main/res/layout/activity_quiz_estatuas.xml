<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="grow.plus.app.Quizzes.QuizEstatuas">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6FEFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6FEFFF">

            <ImageView
                android:id="@+id/imageViewEstatua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/bordaimagem"
                android:backgroundTint="#003C37"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPerguntaNrEstatuas"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textViewTempoEstatuas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="30dp"
                android:text="30"
                android:textColor="#154950"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewPerguntaEstatuas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:text="Pergunta"
                android:textColor="#0E2F33"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewEstatua" />

            <Button
                android:id="@+id/buttonConfirmarEstatuas"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/buttonazulbebeescuro"
                android:text="Confirmar"
                android:textColor="#6FEFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupEstatuas" />

            <TextView
                android:id="@+id/textViewScoreEstatuas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="Score: 0"
                android:textColor="#154950"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewPerguntaNrEstatuas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Pergunta: 1/x"
                android:textColor="#154950"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textViewScoreEstatuas"
                app:layout_constraintTop_toBottomOf="@+id/textViewScoreEstatuas" />

            <RadioGroup
                android:id="@+id/radioGroupEstatuas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPerguntaEstatuas">

                <RadioButton
                    android:id="@+id/buttonOpcao1Estatuas"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonbranco"
                    android:text="RadioButton"
                    android:textColor="#232A50"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/buttonOpcao2Estatuas"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonbranco"
                    android:text="RadioButton"
                    android:textColor="#232A50"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/buttonOpcao3Estatuas"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonbranco"
                    android:text="RadioButton"
                    android:textColor="#232A50"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/buttonOpcao4Estatuas"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonbranco"
                    android:text="RadioButton"
                    android:textColor="#232A50"
                    android:textStyle="bold" />
            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>