<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="grow.plus.app.PaginasIniciaisDosQuizzes.MostraPontuacaoQuizMonumentosFamosos">

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="223dp"
        android:layout_height="165dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/monuments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonComecarQuizMonumentos"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button"
        android:text="@string/come_ar"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewHighScoreQuizMonumentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HighScore: 0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.678" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/quiz_de_verdadeiro_e_falso_sobre_monumentos_famosos_ao_redor_do_mundo"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView42"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toBottomOf="@+id/textView42" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="365dp"
        android:layout_height="39dp"
        android:layout_marginTop="30dp"
        android:text="@string/monumentos_famosos"
        android:textAlignment="center"
        android:textColor="#504F4F"
        android:textColorHighlight="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView29" />

    <ImageView
        android:id="@+id/imageViewRetrocederQuizMonumentos"
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />
</androidx.constraintlayout.widget.ConstraintLayout>